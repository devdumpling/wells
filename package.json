{
  "name": "wells",
  "version": "0.0.1",
  "description": "Dev Wells monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:web": "turbo run build --filter=wells.web",
    "build:docs": "turbo run build --filter=wells.docs",
    "changeset": "changeset",
    "clean": "turbo run clean && rm -rf node_modules",
    "clean:deep": "turbo run clean && pnpm install",
    "dev": "turbo run dev --parallel",
    "dev:web": "turbo run dev --filter=wells.web",
    "dev:docs": "turbo run dev --filter=wells.docs",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "release": "turbo run build --filter=docs^... && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@types/node": "^20.8.3",
    "eslint": "^8.51.0",
    "eslint-config-custom": "workspace:*",
    "prettier": "latest",
    "turbo": "latest"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "^18.0.27",
      "@types/react-dom": "^18.0.10",
      "eslint": "^8.51.0",
      "react": "^18.2.0",
      "react-dom": "^18.2.0"
    }
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=8.8.0"
  }
}
